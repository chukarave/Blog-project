<h2>Edit post</h2>

<form action="/edit" enctype="multipart/form-data" method="POST">
    <h3>Title: <p><input type="text" name="title" value="<%= post.title %>"/></p></h3>
    
    <h3>Post:<p><textarea rows="30" cols="60" name="content"><%= post.content %></textarea></p></h3>
    <br/>
    <input type="hidden" name="id" value="<%= post.id %>" />
    <input type="hidden" name="year" value="<%= post.date.year %>" />
    <input type="hidden" name="month" value="<%= post.date.month %>" />
    <input type="hidden" name="day" value="<%= post.date.day %>" />
    <input style="margin-bottom: 10px;" type="submit" value="Submit Post">
    <br/>
    <a style="padding-bottom: 50px;" href='/home'>Cancel</a>
</form>


